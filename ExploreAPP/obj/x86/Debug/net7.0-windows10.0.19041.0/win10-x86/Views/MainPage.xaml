<Page
    x:Class="ExploreAPP.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <TextBlock Text="Welcome" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24"/>
        <PersonPicture ProfilePicture="https://docs.microsoft.com/windows/uwp/contacts-and-calendar/images/shoulder-tap-static-payload.png" HorizontalAlignment="Right" VerticalAlignment="Top" Height="60px" Width="60px"/>
        
        <TextBox Header="Write your content" PlaceholderText="Name" Height="420px" Margin="10,10,0,0"/>
        <Button Content="Save now" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="100"/>
    </Grid>

</Page>

